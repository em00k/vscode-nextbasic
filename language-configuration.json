{
  "comments": {
    // we actually use code to intercept this and comment properly
    // "lineComment": "REM "
  },

  "folding": {
    "markers": {
      "start": "\\bDEFPROC\\b",
      "end": "\\d\\s+ENDPROC\\b"
    }
  },

  // symbols used as brackets
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  // symbols that can be used to surround a selection
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ]
}
